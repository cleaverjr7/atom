{
  "name": "Highlight Pairs: #if…#endif",
  "scope": "source.c, source.c++, source.objc, source.objc++",
  "settings": {
    "highlightPairs": [
      [
        "(",
        ")"
      ],
      [
        "[",
        "]"
      ],
      [
        "{",
        "}"
      ],
      [
        "“",
        "”"
      ],
      [
        "‘",
        "’"
      ],
      [
        "/^\\s*#if\\b/",
        "/^\\s*#(else|endif)\\b/"
      ],
      [
        "/^\\s*#(if|else)\\b/",
        "/^\\s*#endif\\b/"
      ]
    ]
  }
}
