{
  "name": "Miscellaneous",
  "scope": "text.html",
  "settings": {
    "decreaseIndentPattern": "(?x)\n\t\t^\\s*\n\t\t(</(?!html)\n\t\t  [A-Za-z0-9]+\\b[^>]*>\n\t\t|-->\n\t\t|<\\?(php)?\\s+(else(if)?|end(if|for(each)?|while))\n\t\t|\\}\n\t\t)",
    "highlightPairs": [
      [
        "(",
        ")"
      ],
      [
        "{",
        "}"
      ],
      [
        "[",
        "]"
      ],
      [
        "“",
        "”"
      ],
      [
        "/<(?!area|base|basefont|br|col|frame|hr|img|input|isindex|link|meta|param)\\w+[^>]*(?<!/)>/",
        "/</\\w+>/"
      ]
    ],
    "increaseIndentPattern": "(?x)\n\t\t<(?!\\?|(?:area|base|br|col|frame|hr|html|img|input|link|meta|param)\\b|[^>]*/>)\n\t\t  ([A-Za-z0-9]+)(?=\\s|>)\\b[^>]*>(?!.*</\\1>)\n\t\t|<!--(?!.*-->)\n\t\t|<\\?php.+?\\b(if|else(?:if)?|for(?:each)?|while)\\b.*:(?!.*end\\1)\n\t\t|\\{[^}\"']*$\n\t\t",
    "indentNextLinePattern": "<!DOCTYPE(?!.*>)",
    "shellVariables": [
      {
        "name": "TM_HTML_EMPTY_TAGS",
        "value": "area|base|basefont|br|col|frame|hr|img|input|isindex|link|meta|param"
      }
    ],
    "smartTypingPairs": [
      [
        "\"",
        "\""
      ],
      [
        "(",
        ")"
      ],
      [
        "{",
        "}"
      ],
      [
        "[",
        "]"
      ],
      [
        "“",
        "”"
      ],
      [
        "<",
        ">"
      ]
    ]
  }
}
