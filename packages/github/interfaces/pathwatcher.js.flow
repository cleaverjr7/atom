type WatchEvent = 'rename' | 'delete' | 'change'

declare module 'pathwatcher' {
  declare class PathWatcher {
    close (): void;
  }

  declare class Directory {
    constructor (path: string): this;
  }

  declare function watch (path: string, fn: (event: WatchEvent, path: string) => void): PathWatcher;
}
