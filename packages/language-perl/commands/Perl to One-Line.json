{
  "beforeRunningCommand": "nop",
  "captureFormatString": "$1 $3",
  "capturePattern": "^(.*)line (\\d+)(.*)$",
  "command": "#!/usr/bin/env bash\n\n${TM_PERLTIDY:-perltidy} -st -dac -mangle | perl -e '        local $/;$_=<>;s/^#(.*?)\\n//;s/\\n//g;print;'\n",
  "input": "selection",
  "inputFormat": "text",
  "lineCaptureRegister": "2",
  "name": "Perl to One-line",
  "outputCaret": "heuristic",
  "outputFormat": "text",
  "outputLocation": "replaceInput",
  "scope": "source.perl",
  "version": 2
}
